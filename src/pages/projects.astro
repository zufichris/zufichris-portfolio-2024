---
import Layout from "@layouts/Layout.astro";
import Navbar from "@components/Navbar.astro";
import Footer from "@components/Footer.astro";
import Projects from "@components/Projects.astro";

import { projects } from "@data/projects.js";
import { futureProjects } from "@data/future-projects";
import { MyDetails } from "../constants";
import { Icon } from "astro-icon/components";
---

<Layout title="My Projects" desc="These are my personal projects">
  <Navbar />
  <main class="container mx-auto px-5 sm:px-12 mt-32 md:mt-60">
    <h1 class="text-2xl md:text-5xl font-extrabold">Projects</h1>
    <p class="text-sm md:text-lg lg:text-xl mt-2">
      These are my personal projects
    </p>
    <div class="flex flex-col gap-12">
      {projects.map((project) => <Projects project={project} />)}
    </div>
  </main>
  <section class="container mx-auto px-5 sm:px-12 mt-24">
    <h2 class="text-2xl md:text-5xl font-bold">Blueprints</h2>
    <p class="text-sm md:text-lg lg:text-xl mt-2">
      These are the projects I am currently or planning to work on in the future
    </p>
    <div class="grid grid-cols-1 lg:grid-cols-2 gap-12">
      {futureProjects.map((project) => <Projects project={project} />)}
    </div>
  </section>
  <section class="container mx-auto px-5 sm:px-12 mt-24">
    <a href={MyDetails.github} target="_blank">
      <div
        class="p-8 border border-gray-600 transition-colors duration-300 hover:bg-gray-800 rounded-xl flex justify-between items-center"
      >
        <div>
          <p class="text-base sm:text-xl lg:text-3xl">Looking for more?</p>
          <p class="text-xs sm:text-base lg:text-xl">
            You can view my github repos
          </p>
        </div>
        <Icon name="heroicons:arrow-right" class="size-8 md:size-12" />
      </div>
    </a>
  </section>
  <Footer />
</Layout>
